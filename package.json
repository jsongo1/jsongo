{
  "name": "jsongo",
  "version": "0.6.0",
  "description": "Like MongoDB, except stores data in git-friendly flat json files",
  "license": "MIT",
  "bin": "build/cli/jsongo-cli.js",
  "main": "build/lib/index.js",
  "module": "build/esm/index.js",
  "unpkg": "build/jsongo.min.js",
  "types": "lib",
  "scripts": {
    "clean": "rm -rf build",
    "build": "run-p clean build:*",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "rollup -c",
    "build:test": "tsc --outDir build",
    "test": "yarn clean && yarn build:test && ava",
    "watch": "(yarn build:test --watch &); ava --watch"
  },
  "dependencies": {
    "bson-objectid": "^1.3.1",
    "find-duplicated-property-keys": "^1.1.2",
    "mingo": "^3.0.6",
    "sort-keys": "^4.0.0",
    "value-or-json": "^1.1.0",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/find-duplicated-property-keys": "^1.1.0",
    "@types/yargs": "^15.0.5",
    "ava": "^3.12.1",
    "memfs": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.26.8",
    "rollup-plugin-terser": "^7.0.1",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "build",
    "lib"
  ],
  "keywords": [
    "json",
    "mongo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rentzsch/jsongo.git"
  },
  "bugs": {
    "url": "https://github.com/rentzsch/jsongo/issues"
  },
  "ava": {
    "files": [
      "build/test/**/*.test.js"
    ],
    "ignoredByWatcher": [
      "lib/"
    ]
  }
}
